<nav class="navbar navbar-expand-lg navbar-light bg-light d-flex justify-content-between">
  <p>AirBnB</p>
  <p class="form-inline"><%= link_to "Add Flat", new_flat_path, class: "btn btn-dark" %></p>
</nav>
<div class="container">
  <div class="row justify-content-center">
    <h1>Flats</h1>
  </div>
  <div class="row justify-content-center">
    <p>You've searched for . We found 3 flats for you.</p>
  </div>
  <div class="row justify-content-center">
    <% @flats.each do |flat| %>
    <div class="card col-3 flat-card">
      <h3><%= flat.name %></h3>
      <p><%= flat.address %></p>
      <p><i class="fas fa-user-friends"></i><%= flat.number_of_guests %> <i class="fas fa-euro-sign"></i><%= flat.price_per_night %></p>
      <p><%= link_to "More Info", flat_path(flat.id) %></p>
    </div>
    <% end %>
  </div>
</div>
